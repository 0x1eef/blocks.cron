#!/bin/sh -e

##
# require root
if [ "$(id -u)" != "0" ]; then
    echo "[x] Rerun this script as root"
    exit 1
fi

##
# variables
localbase=$(dirname "$(dirname "$(realpath "$0")")")
libexec="${localbase}"/libexec/blocks+cron

##
# main
"${libexec}"/setup-user
"${libexec}"/setup-doas
"${libexec}"/setup-cron
