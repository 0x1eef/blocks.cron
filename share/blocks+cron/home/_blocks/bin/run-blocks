#!/bin/sh -e

##
# environment
export HOME="/home/_blocks"
export PATH="/sbin:/bin:/usr/bin:/usr/local/bin"

##
# variables
# shellcheck source=/dev/null
today=$(date "+%Y%m%d")
localbase="${HOME}"/.local
libexec="${localbase}"/libexec
dailydir="${localbase}"/share/daily
dailyfile="${dailydir}"/"${today}"
logdir="${localbase}"/var/log
logfile="${logdir}"/"${today}"

##
# main
blocks get
blocks emit > "${dailyfile}"
doas -n -u root -- "${libexec}"/copy
echo "OK ${libexec}/copy" >> "${logfile}" 2>&1
doas -n -u root -- "${libexec}"/reload
echo "OK ${libexec}/reload" >> "${logfile}" 2>&1
