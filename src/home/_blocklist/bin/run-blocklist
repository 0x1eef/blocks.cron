#!/bin/sh
set -e

##
# environment
export HOME="/home/_blocklist"
export PATH="/usr/bin:/usr/local/bin:${PATH}"

##
# setup
. /home/_blocklist/.local/sh/today.sh
blocklist=$(which blocklist)
doas=$(which doas)
libexec="/home/_blocklist/.local/libexec"
path="/home/_blocklist/blocks/$(today)"

##
# main
${blocklist} download
${blocklist} emit > ${path}
${doas} -u root ${libexec}/copy
${doas} -u root ${libexec}/reload
